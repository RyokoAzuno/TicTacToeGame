@model TicTacToeWebApp.Models.GameViewModel

@{
    ViewBag.Title = "Tic Tac Toe";
}

<div class="container container-fluid">
    <table class="table table-bordered">
        <tr>
            <td class="bg-primary">
                Player Name
            </td>
            <td class="bg-primary">
                Symbol
            </td>
            <td class="bg-primary">
                Number of Wins
            </td>
        </tr>
        <tr>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player1.Name)</b>
            </td>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player1.Symbol)</b>
            </td>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player1.NumOfWins)</b>
            </td>
        </tr>
        <tr>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player2.Name)</b>
            </td>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player2.Symbol)</b>
            </td>
            <td>
                <b class="text-info">@Html.DisplayFor(model => Model.Player2.NumOfWins)</b>
            </td>
        </tr>
    </table>
</div>
<div>
    @Html.ActionLink("Reset", "Reset",
   new { firstPlayerName = Model.Player1.Name, secondPlayerName = Model.Player2.Name },
   new { @class = "btn-primary btn-lg text-size-lg btn-block text-center", @style = "text-decoration:none;" })
</div>

